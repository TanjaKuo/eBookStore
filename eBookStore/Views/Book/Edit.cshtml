@model eBookStore.Models.Book
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> signInManager;


@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" readonly />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            @if (Model != null && Model.Reserve == true)
            {
                @if (signInManager.IsSignedIn(User) && Model.UserName == User?.Identity?.Name)
                {
                    @*<div class="me-3 text-dark">
                    <h2> yeah wooo  @User?.Identity?.Name </h2>
                </div>*@
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Reserve" /> @Html.DisplayNameFor(model => model.Reserve)
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>

                }
                else
                {
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <p>Sorry, has been book by user @Model.UserName</p>
                            <input class="form-check-input" asp-for="Reserve" hidden />
                        </label>
                    </div>

                }
            }
            else
            {
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Reserve" /> @Html.DisplayNameFor(model => model.Reserve)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>

            }


            @*<div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Reserve" /> @Html.DisplayNameFor(model => model.Reserve)
            </label>
        </div>*@
            @*<div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>*@
        </form>
    </div>
</div>

