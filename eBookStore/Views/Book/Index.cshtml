@*@model IEnumerable<eBookStore.Models.Book>*@

@model eBookStore.Models.BookViewModel


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Book" asp-action="Index" method="get">
    <p>
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Reserve)
            </th>
            <th></th>
        </tr>
    </thead>
        @if (Model != null && Model.Books != null && Model.Books.Any())
            {
            @foreach (var item in Model.Books)
            {
             <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reserve)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
             </tbody>
            }
        }
        else
            {
                <tbody>
                    <tr>
                        <td>
                            <p>Sorry, this book is not exist. </p>
                        </td>
                    </tr>
                </tbody>
            }
</table>
